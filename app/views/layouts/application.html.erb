<!DOCTYPE html>
<html>
  <head>
    <title class="text-muted">Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="container">
        <div class="row" style="background-color: black;">
          <div class="col-lg-9">
  <h3 style="color: white;">Bookers</h3>
</div>
<div class="col-lg-3">
  <% if user_signed_in? %>
  <%= link_to user_path(current_user.id) do %><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Home
  <% end %>

  <%= link_to users_path do %><span class="glyphicon glyphicon-user" aria-hidden="true"></span>Users
  <% end %>

  <%= link_to books_path do %><span class="glyphicon glyphicon-book" aria-hidden="true"></span>Books
  <% end %>

    <%= link_to destroy_user_session_path, method: :delete do %><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>logout
    <% end %>

  <% else %>
    <%= link_to root_path do %><span class="glyphicon glyphicon-home" aria-hidden="true">Home
      <% end %>

    <%= link_to home_about_path do %><span class="glyphicon glyphicon-link" aria-hidden="true"></span>About
    <% end %>

    <%= link_to new_user_registration_path do %><span class="glyphicon glyphicon-edit" aria-hidden="true"></span>sign up
    <% end %>

    <%= link_to user_session_path do %><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>login
    <% end %>

  <% end %>
</div>
</div>
</div>
</header>
    <%= yield %>
  </body>
    <footer>
    <p class="col-xs-offset-9">CopyRight Infratop.inc</p>
  </footer>
</html>

<h1>User info</h1>
<% if @user.errors.any? %>
<div id="error_explanation" class="alert alert-danger">
	<ul>
		<h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
		<% @user.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>
<% form_for @user do |f| %>
<h4>Name</h4><%= f.text_field :name %>
<h4>Image</h4><%= f.attachment_field :profile_image %>
<h4>Introduction</h4><%= f.text_field :introduction %><br>
<%= f.submit "Update User" %>
<% end %>



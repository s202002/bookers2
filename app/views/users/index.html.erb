<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h3>User info</h3>
<div><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: '60x60' %></div>
<a>name    <%= @user.name %></a>
<h4>introduction  <%= @user.introduction %></h4>
<%= link_to edit_user_path(@user) do %><span class="col-xs-12 btn btn-default glyphicon glyphicon-wrench" aria-hidden="true"></span>
<% end %>
      <h2>New book</h2>
      <%= form_for (@book) do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title, class: "col-xs-12" %>
      <h4>Opinion</h4>
      <%= f.text_area :body, class: "col-xs-12" %><br>
      <%= f.submit 'Create Book', class: "col-xs-12" %>
      <% end %>
    </div>
		<div class="col-xs-9">
			<h3>Users</h3>
		<table class="table table-striped">
			<thead>
				<tr>
					<td>image</td>
					<td>name</td>
					<td></td>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
				<tr>
					<td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: '40x40' %></td>
					<td><%= user.name %></td>
					<td><%= link_to "Show", user_path(user) %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	</div>
</div>